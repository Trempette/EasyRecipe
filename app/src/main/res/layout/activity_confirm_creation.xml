<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConfirmCreationActivity" android:background="@drawable/degrade_background">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_confirm_creation"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorGreen"
            android:elevation="4dp"
            android:fitsSystemWindows="true"
    />
    <TextView
            android:text="Felicitation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/felicitation_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.465" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_confirm_creation" android:gravity="center"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="Ca te va ? On l'enregistre ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/okay_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/oui_button_confirm_creation" android:textSize="24sp"
            android:textColor="@android:color/black"/>
    <Button
            android:text="@string/oui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/oui_button_confirm_creation" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="15dp" android:layout_marginRight="15dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/shape_button"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <Button
            android:text="@string/finalement_non"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/non_cofirm_creation" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:background="@drawable/shape_button"/>
    <TextView
            android:text="Entre le : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entre_le" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/felicitation_tv" android:textSize="24sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date_in"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/entre_le" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="Et le :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_le" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_in" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="24sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date_out"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="24sp"
            android:textStyle="bold" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_le"
            android:textColor="@android:color/black"/>


</android.support.constraint.ConstraintLayout>