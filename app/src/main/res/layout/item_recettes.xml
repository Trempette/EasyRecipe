<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:cardElevation="2dp" app:contentPadding="8dp"
            app:cardCornerRadius="15dp" android:layout_margin="4dp" android:clickable="true"
            android:id="@+id/cardview_item" app:cardBackgroundColor="@color/lightGreen">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="nombre d'ingredient(s)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nombre_dingredients_item_recette" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/recette_item_titre"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"/>
            <TextView
                    android:text="Titre de la recette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recette_item_titre" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textStyle="bold"
                    android:textSize="22sp"/>
            <TextView
                    android:text="temps de step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/step_item_recette" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/nombre_dingredients_item_recette"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>